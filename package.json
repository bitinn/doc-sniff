{
  "name": "doc-sniff",
  "version": "1.0.0",
  "description": "A helper for combating incorrect content-type, aka a mime sniffing module for node.js",
  "main": "index.js",
  "scripts": {
    "test": "mocha test.js",
    "report": "istanbul cover _mocha -- -R spec test.js",
    "coverage": "istanbul cover _mocha --report lcovonly -- -R spec test.js && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitinn/doc-sniff.git"
  },
  "keywords": [
    "sniff",
    "mime",
    "content-type"
  ],
  "author": "David Frank",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitinn/doc-sniff/issues"
  },
  "homepage": "https://github.com/bitinn/doc-sniff",
  "devDependencies": {
    "chai": "^1.10.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.5",
    "mocha": "^2.1.0"
  }
}
